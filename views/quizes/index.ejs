<!DOCTYPE html>
<html>
<head>
<meta charset="utf-8">

</head>
<body>
<form method="get" action="/quizes">
Texto que desea encontrar: <p>
<input type="text" name="search" value="texto" />
<input type="submit" value="Enviar">
</form>
	<table style="margin: 0 auto;">
		<% var i; for (i=0; i < quizes.length; i++) { %>
			<tr>
			<td><a href="/quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
			<%if(session.user){
          if (session.user.isAdmin || session.user.id === quizes[i].UserId) {%>
			<td><a href="/quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
			<td>
			<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
			    <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
			    Borrar
			    </button>
			</form>

			</td>
			
			<%}%>
<td><form method="post" action="/user/<%= session.user.id %>/favoritos/<%= quizes[i].id %>?_method=put" enctype="multipart/form-data"><button>fav</button></form></td>
<td><form method="post" action="/user/<%= session.user.id %>/favoritos/<%= quizes[i].id %>?_method=delete" enctype="multipart/form-data"><button>Unfav</button></form></td>

			<%}%>
			</tr>
		<% } %>
	</table><p>
<%if(session.user){%>
<a href="/quizes/new"><button type="button">Crear Pregunta</button></a>
<%}%>
</body>
</html>
